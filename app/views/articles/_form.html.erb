<%
=begin%>
create a shared form using partials
<%
=end%>
<%= form_with model: article do |form| %>
<div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <%
=begin%>
    get the error message if there is, iterate
    <%
=end%>
    <% article.errors.full_messages_for(:title).each do |message| %>
    <div><%= message %></div>
    <% end %>
</div>
<div>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
    <% article.errors.full_messages_for(:body).each do |message| %>
    <div> <%= message %></div>
    <% end %>
</div>

<div>
    <%= form.submit %>
</div>

<% end %>